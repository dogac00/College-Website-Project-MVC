@model IEnumerable<DogacProject.ViewModels.UserModel>

<style>
    #my_select {
        width: 40%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    </style>

<br><br>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserIdNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDepartmentManager)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserIdNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDepartmentManager)
                </td>
                <td>
                    @if (item.IsAdmin)
                    {
                        <a asp-action="RemoveAdmin" asp-route-id="@item.Id" class="btn btn-danger">Remove Admin</a>
                    }
                    else
                    {
                        <a asp-action="MakeAdmin" asp-route-id="@item.Id" class="btn btn-primary">Make Admin</a>
                    }
                </td>
                @if (item.IsDepartmentManager)
                {
                <form asp-action="MakeManagerTo">
                    <input name="id" value="@item.Id" />
                    <select name="departmentId" id="my_select" asp-items="ViewBag.DepartmentNames"></select>
                    <input type="submit" value="Assign" />
                </form>

                    <td>
                        <a asp-action="RemoveDepartmentManager" asp-route-id="@item.Id" class="btn btn-danger">Remove Department Manager</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="MakeDepartmentManager" asp-route-id="@item.Id" class="btn btn-primary">Make Department Manager</a>
                    </td>
                }

            </tr>
            }
        </tbody>
    </table>