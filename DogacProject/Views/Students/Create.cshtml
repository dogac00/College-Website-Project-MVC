@model Student
@{
    ViewData["Title"] = "Create";
}

<style>
    #my_select {
        width: 40%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    #stu_input {
        width: 40%;
        display: inline-block;
    }

    h1 {
        text-align: center;
    }

</style>

<h1>Create a new Student</h1>
<hr />

<div class="row" style="display: block; text-align: center; ">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>Student Name</h3>
                <input asp-for="Name" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <h3>Department Name</h3>
                <select asp-for="DepartmentId" id="my_select" class="form-control" asp-items="ViewBag.DepartmentName" ></select>
            </div>
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Student ID</h3>
                <span asp-validation-for="StuID" class="text-danger"></span>
                <input asp-for="StuID" id="stu_input" class="form-control w3-input w3-border w3-round-large" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>