@model Student
@{
    ViewData["Title"] = "Create";
}

<h1>Create a new Student</h1>
<form name="StudentsCreateForm" asp-action="Create">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Name" class="control-label"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Department.Name" class="control-label"></label>
        <input asp-for="Department.Name" class="form-control" />
    </div>
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="StuID" class="control-label"></label>
        <span asp-validation-for="StuID" class="text-danger"></span>
        <input asp-for="StuID" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add New</button>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>