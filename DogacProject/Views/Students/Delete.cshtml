@model DogacProject.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<style>
    h1, h3 {
        text-align: center;
    }

    #my_div {
        display: block;
        text-align: center;
    }

    h4, dl, dt, dd {
        display: inline-block;
        text-align: center;
    }
</style>

<h1>Delete</h1>
<hr />

<h3>Are you sure you want to delete this?</h3>
<div id="my_div">
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <b>@Html.DisplayFor(model => model.Name)</b>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="w3-button w3-red" /> |
        <a asp-action="Index" class="w3-button w3-indigo">Back to List</a>
    </form>
</div>