@model List<Student>
@{
    ViewData["Title"] = "Students";
}
     
<style>

    #students {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    #students td, #students th {
            border: 1px solid #ddd;
            padding: 8px;
        }

    #students tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    #students tr:hover {
            background-color: #ddd;
        }

    #students th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #0D3023;
        color: white;            
        }

</style>

<table id="students">
    <tr>
        <th>Name</th>
        <th>Detail</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in @Model)
    {
    <tr>
        <td>@item.Name</td>
        <td><a asp-controller="Students" asp-action="Detay" asp-route-id="@item.Id" class="btn btn-primary">Detay</a></td>
        <td><a asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
    </tr>
    }
</table>
