@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<br><br>

<h1 style="display: block; text-align: center; ">@ViewData["Title"]</h1>

<section class="ab-info-main py-md-5">
    <div class="container py-md-3">
        <div class="speak px-lg-5">

            <div class="row" style="display: block; text-align: center; ">
                <div class="col-md-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <h3>Name</h3>
                            <input asp-for="Input.Name" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3>Password</h3>
                            <input asp-for="Input.Password" id="stu_input" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <br><br>
                        <div class="form-group">
                            <button type="submit" class="w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; ">Log In</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
