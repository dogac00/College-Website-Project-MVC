@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .center {
        display: block;
        text-align: center;
    }
</style>

<br><br>
<h1 class="center">@ViewData["Title"]</h1>

<h4 class="center">Create a new account.</h4>
<hr />

<section class="ab-info-main py-md-5">
    <div class="container py-md-3">
        <div class="speak px-lg-5">
            <div class="row" style="display: block; text-align: center; ">
                <div class="col-md-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <h3>Name</h3>
                            <input asp-for="Input.Name" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3>Your ID</h3>
                            <input asp-for="Input.UserId" id="stu_input" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3>City</h3>
                            <input asp-for="Input.City" id="stu_input" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3>Password</h3>
                            <input asp-for="Input.Password" id="stu_input" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h3>Confirm Password</h3>
                            <input asp-for="Input.ConfirmPassword" id="stu_input" class="form-control w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; " />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <br><br>
                        <div class="form-group">
                            <button type="submit" class="w3-input w3-border w3-round-large" style="width: 40%; display: inline-block; ">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
